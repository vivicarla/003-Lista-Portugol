programa {
  funcao inicio() {
    real numero
    escreva("Informe o número: ")
    leia(numero)
    se(numero>=1){
      escreva("O número é positivo")
    }senao se(numero<=-1){
      escreva("O número é negativo")

    }senao se(numero==0){
      escreva("O número é igual a zero")
      
    }
  }
}
